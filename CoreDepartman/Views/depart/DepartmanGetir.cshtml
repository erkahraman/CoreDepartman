@model CoreDepartman.Models.departmanlar

@{
    ViewData["Title"] = "DepartmanGetir";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

@using (Html.BeginForm("DepartmanGuncelle", "depart", FormMethod.Post))
{
    <b> Departman ID</b>
    @Html.TextBoxFor(x => x.id, new { @class = "form-control" })
    <br />

    <b> Departman Adı</b>
    @Html.TextBoxFor(x => x.departmanad, new { @class = "form-control" })
    <br />


    <button class="btn btn-default" style="background-color:#ff6a00;color:white">Departman Güncelle</button>

}

